<td class="text-right">
    <div class="btn-group" role="group">
        <a class="btn btn-warning" asp-action="Edit" asp-route-id="@Model"><i class="fas fa-edit"></i></a>
        <form method="post" action="Delete">
            <button onclick="if (!confirm('Are you sure you want delete this item ?')) { return false; }" type="submit" class="btn btn-primary" asp-action="Delete" asp-route-id="@Model"><i class="far fa-trash-alt"></i></button>
        </form>
    </div>
</td>
